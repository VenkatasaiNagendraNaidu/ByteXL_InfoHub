{
    "version":  2,
    "builds":  [
                   {
                       "src":  "api/index.mjs",
                       "use":  "@vercel/node"
                   },
                   {
                       "src":  "client/package.json",
                       "use":  "@vercel/static-build",
                       "config":  {
                                      "distDir":  "client/dist"
                                  }
                   }
               ],
    "routes":  [
                   {
                       "src":  "^/api/(.*)$",
                       "dest":  "/api/index.mjs"
                   },
                   {
                       "handle":  "filesystem"
                   },
                   {
                       "src":  "^(?!/api)(.*)$",
                       "dest":  "/index.html"
                   }
               ]
}