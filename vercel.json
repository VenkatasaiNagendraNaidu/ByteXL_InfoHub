{
  "version": 2,
  "functions": { "api/**": { "runtime": "nodejs20.x" } },
  "installCommand": "npm --prefix client install --no-audit --no-fund",
  "buildCommand": "npm --prefix client run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.mjs" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}